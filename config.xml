<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.TVGuideApp" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>TVGuideApp</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
	<icon src="app-icon.png" />
	<splash src="app-icon.png" width="320" height="480" />
	<preference name="SplashScreenDelay" value="10000" />
</widget>
